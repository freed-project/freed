{
  "name": "@freed/sync",
  "version": "0.1.0",
  "description": "Cross-device sync for Freed",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./storage/filesystem": {
      "import": "./dist/storage/filesystem.js",
      "types": "./dist/storage/filesystem.d.ts"
    },
    "./storage/indexeddb": {
      "import": "./dist/storage/indexeddb.js",
      "types": "./dist/storage/indexeddb.d.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@freed/shared": "*",
    "@automerge/automerge": "^2.2.8",
    "@automerge/automerge-repo": "^1.2.1",
    "ws": "^8.16.0"
  },
  "devDependencies": {
    "@types/ws": "^8.5.10",
    "typescript": "^5.3.0"
  }
}
